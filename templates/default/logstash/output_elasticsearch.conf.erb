# no filters or mutators should be placed here, we preserve as much as possible by this stage
output {
<%- @type_index_maps.each_pair do |type, index| %>
  if [type] == "<%= type %>" {
    elasticsearch {
<% if @elasticsearch_ip -%>
      host => "<%= @elasticsearch_ip %>"
<% end -%>
<% if @elasticsearch_cluster -%>
      cluster => "<%= @elasticsearch_cluster %>"
<% end -%>
<% if @elasticsearch_embedded -%>
      embedded => true
<% end -%>
<% if @bind_host -%>
      bind_host => "<%= @bind_host %>"
<% end -%>
<% if @es_index -%>
      index => "<%= @es_index %>"
<% end -%>
<% if @elasticsearch_protocol -%>
      protocol => "<%= @elasticsearch_protocol %>"
<% end -%>
      index => "<%= index %>"
    }
  }
<%- end %>
}
